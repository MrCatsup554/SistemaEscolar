<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minWidth="655.0" spacing="30.0" style="-fx-padding: 30; -fx-background-color: #f4f6fa; -fx-border-radius: 10; -fx-background-radius: 10;"
      xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.AsistenciaController">

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <children>
            <Button fx:id="btnInicio" text="Inicio" onAction="#irAInicio" style="-fx-background-color: #e0e0e0; -fx-font-weight: bold; -fx-background-radius: 5;">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Button fx:id="btnPersonas" text="Personas" onAction="#irAPersonas" style="-fx-background-color: #e0e0e0; -fx-font-weight: bold; -fx-background-radius: 5;">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Button fx:id="btnAsistencia" text="Asistencias" style="-fx-background-color: #4e7efc; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />
            <Button fx:id="btnMateria" text="Materias" onAction="#irAMateria" style="-fx-background-color: #e0e0e0; -fx-font-weight: bold; -fx-background-radius: 5;">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Button fx:id="btnInscripciones" text="Inscripciones" onAction="#irAInscripciones" style="-fx-background-color: #e0e0e0; -fx-font-weight: bold; -fx-background-radius: 5;">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
        </children>
    </HBox>
    
    <Separator prefWidth="200.0" />

    <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2a3a5c;"
           text="ASISTENCIA" />

    <HBox alignment="CENTER" spacing="12">
      <Label alignment="CENTER_RIGHT" minWidth="100.0" prefHeight="17.0" style="-fx-text-fill: #3a4a6c;"
             text="ID InscripciÃ³n: " textAlignment="RIGHT">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <TextField fx:id="textIdInscripcion" prefHeight="27.0" prefWidth="150.0" promptText="Ingrese ID" style="-fx-background-color: #ffffff; -fx-border-color: #b0c4de; -fx-border-radius: 5;" />
      
      <Label alignment="CENTER_RIGHT" minWidth="80.0" style="-fx-text-fill: #3a4a6c;"
             text="Fecha: " textAlignment="RIGHT">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <DatePicker fx:id="dateAsistencia" />
    </HBox>

   <HBox alignment="TOP_CENTER" prefHeight="15.0" prefWidth="595.0" spacing="30.0">
      <children>
          <Button fx:id="btnVerAsistencias" onAction="#verAsistencias" style="-fx-font-size: 15px; -fx-background-color: #828282; -fx-text-fill: white; -fx-background-radius: 5;"
                  text="Visualizar Asistencias">
            <font>
               <Font name="System Bold" size="12.0" />
            </font>
         </Button>
         <Button fx:id="btnRegAsistencia" onAction="#registrarAsistencia" style="-fx-font-size: 15px; -fx-background-color: #4e7efc; -fx-text-fill: white; -fx-background-radius: 5;"
                 text="Registrar Asistencia" />
      </children>
   </HBox>

    <Label style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #2a3a5c;"
           text="Asistencias Registradas:" />
           
    <TextArea fx:id="textArAsistencias" editable="false" prefHeight="200" style="-fx-background-color: #eaf0fb; -fx-border-color: #b0c4de; -fx-border-radius: 5;"
              wrapText="false">
      <cursor>
         <Cursor fx:constant="DEFAULT" />
      </cursor>
      <font>
         <Font name="Monospaced" size="14.0" />
      </font></TextArea>

</VBox>